<h1 class = page-header><span>League Really Good League Name</span><span class = "season-title">Nick's Season</span></h1>

<!-- chart -->

<%= line_chart([{:name => "test", :data => {1 => 10, 2 => 20, 3 => 30}}])  %>

<%= line_chart(
    @users.map do |user|
      { :name => user.team_name,
        :data => user.season_progression}

    end
)  %>

<!-- table -->
<div class="table-responsive">
<h3 class = "text-center">League Summary</h3>
<table class="table table-bordered ">
  <thead>
    <tr>
      <% 13.times do |i| %>
      <th class = "text-center"><%= ("Episode #" if i == 0) || (link_to i, "/weeks/#{i}") %></th>
      <% end %>
      <th class = "text-center">Season</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <th scope="row"><%= link_to user.team_name, user %></th>
      <% 12.times do |i| %>
        <td class = "text-center"> <%= user.week_points(i+1) %></td>
      <% end %>
      <td class = "text-center"> <%= user.season_points %> </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
