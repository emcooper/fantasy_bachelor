<h1>Edit <%= ("Your Account" if @user == current_user) || (@user.team_name) %></h1>

<%= form_for @user do |f| %>
  <%= f.label :team_name %>
  <%= f.text_field :team_name %>
  <%= check_box_tag(:role, :admin, @user.admin?, :name => 'user[role]', id: "admin?") %>
  <%= "Admin?" %>
  <%= f.submit %>
<% end %>
